<h1>Create A GOAL</h1>

<form action="<%= goals_url %>" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<label for="title">Title:</label>
<input type="text" name="goal[title]" id="title" value="<%= @goal.title %>">


<label for="details">Details:</label>
<textarea name="goal[details]" id="details">
<%= @goal.details %>
</textarea>

<label for="private_true">Private</label>
<input type="radio" name="goal[private]" id="private_true" value="true">

<label for="private_false">Public</label>
<input type="radio" name="goal[private]" id="private_false" value="false">

<label for="completed">Completed?</label>
<input type="checkbox" name="goal[completed]" id="completed" value="true">

<input type="submit" value="Create Goal!">
</form>